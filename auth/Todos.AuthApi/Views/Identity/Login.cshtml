@model LoginUser
@{
    ViewData["Title"] = "Login page";
}

<div class="container w-75 mt-5">
    <div>
        <h3>Login page.</h3>
        <p class="mt-1">Your security is our responsibility.</p>
    </div>

    <form asp-controller="Identity" asp-action="Login" method="post">
        <div>
            <label for="user_name" class="form-label">User name: </label>
            <input
                id="user_name"
                type="text"
                placeholder="Enter user name"
                class="form-control"
                autofocus
                asp-for="UserName">
            <span asp-validation-for="UserName"></span>
        </div>

        <div class="mt-2">
            <label for="user_password" class="form-label">User password: </label>
            <input
                id="user_password"
                type="password"
                placeholder="Enter user password"
                class="form-control"
                asp-for="Password" >
            <span asp-validation-for="Password"></span>
        </div>

        <div>
            <input type="hidden" asp-for="ReturnUrl" />
        </div>

        <div class="mt-2">
            <button type="submit" class="btn btn-success mt-2">Login</button>
        </div>

        <div class="mt-3">
            <a class="link-primary" asp-controller="Identity" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Go to registration</a>
        </div>
    </form>
</div>
