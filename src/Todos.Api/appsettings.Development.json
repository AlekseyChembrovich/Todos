{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DbSchemes": {
    "Resource": "data",
    "Authority": "auth"
  },
  "ConnectionStrings": {
    // "ResourceDbConnectionString": "Host=localhost; Port=5003; Database=TodoDb; Username=postgres; Password=postgres"
    "ResourceDbConnectionString": "Server=localhost;Port=5009;User Id=postgres;Password=postgres;Database=TodoDb;"
  },
  "AuthConfig": {
    "Authority": "https://localhost:5003/"
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] [{UserId} {UserName}]: {Message} {NewLine} {Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "log/log-.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "rollingInterval": 3,
          "retainedFileCountLimit": 10
        }
      }
    ]
  }
}
