{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "TodosDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "TodosStore",
    "CollectionName": "Todos"
  },
  "AuthConfig": {
    "Authority": "https://localhost:5003/"
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] [{UserId} {UserName}]: {Message} {NewLine} {Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "log/log-.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "rollingInterval": 3,
          "retainedFileCountLimit": 10
        }
      }
    ]
  }
}
